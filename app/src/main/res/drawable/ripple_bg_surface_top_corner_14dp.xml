<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/surfaceRipple">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners
                android:topRightRadius="@dimen/margin_padding_size_14"
                android:topLeftRadius="@dimen/margin_padding_size_14"
                />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:topRightRadius="@dimen/margin_padding_size_14"
                android:topLeftRadius="@dimen/margin_padding_size_14"
                />
            <solid android:color="@color/surface" />
        </shape>
    </item>
</ripple>