<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/surface_ripple"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/margin_padding_size_16"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_text"
        tools:text="Rename"
        android:textSize="@dimen/edit_text_size_16"
        android:textColor="@color/text1"
        android:fontFamily="@font/source_sans_pro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_badge"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:textSize="10sp"
        android:visibility="visible"
        android:textColor="@color/text"
        android:text="@string/new_caps"
        android:background="@color/primary"
        android:layout_marginStart="44dp"
        android:paddingStart="@dimen/margin_padding_size_2"
        android:paddingEnd="@dimen/margin_padding_size_2" />

</LinearLayout>