<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_padding_size_24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_size_24"
        android:layout_marginEnd="@dimen/margin_padding_size_24"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/darkBlueTextColor"
            android:textSize="@dimen/edit_text_size_20"
            android:layout_marginBottom="@dimen/margin_padding_size_16"
            android:visibility="gone"
            tools:visibility="visible"
            app:fontFamily="@font/source_sans_pro_semibold"
            tools:text="Receive DCR" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkerBlueGrayTextColor"
            android:textSize="@dimen/edit_text_size_16"
            app:fontFamily="@font/source_sans_pro"
            tools:text="Each time you request a payment, a new address is created to protect your privacy." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_size_16"
        android:padding="@dimen/margin_padding_size_8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margin_padding_size_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_neutral"
                style="@style/textViewButton.Outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="@dimen/margin_padding_size_12"
                android:paddingEnd="@dimen/margin_padding_size_12"
                android:visibility="invisible"
                tools:text="Neutral"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_negative"
            style="@style/textViewButton.Outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_padding_size_8"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="@dimen/margin_padding_size_12"
            android:paddingEnd="@dimen/margin_padding_size_12"
            android:visibility="invisible"
            tools:text="Negative"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/btn_positive"
            style="@style/textViewButton.Outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="@dimen/margin_padding_size_12"
            android:paddingEnd="@dimen/margin_padding_size_12"
            android:visibility="invisible"
            tools:text="Positive"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>