<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/surface_ripple"
    android:paddingTop="@dimen/margin_padding_size_12"
    android:paddingBottom="@dimen/margin_padding_size_12"
    android:paddingStart="@dimen/margin_padding_size_24"
    android:paddingEnd="@dimen/margin_padding_size_24">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/list_preference_radio"
        android:src="@drawable/ic_radial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_preference_label"
        android:layout_marginStart="@dimen/margin_padding_size_32"
        android:layout_marginEnd="@dimen/margin_padding_size_24"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="@dimen/edit_text_size_16"
        android:textColor="@color/text1"
        tools:text="Simplified Payment Verification (SPV)" />

</LinearLayout>