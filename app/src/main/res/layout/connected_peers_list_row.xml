<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:background="@drawable/ripple"
        android:focusable="true"
        android:clickable="true"
        android:padding="@dimen/margin_padding_size_16"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/expand_row"
            android:src="@drawable/ic_expand" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_size_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro"
                android:includeFontPadding="false"
                android:textColor="@color/text1"
                android:textSize="@dimen/edit_text_size_16"
                tools:text="37" />

            <TextView
                android:id="@+id/tv_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_4"
                android:fontFamily="@font/source_sans_pro"
                android:includeFontPadding="false"
                android:textColor="@color/blueGraySecondTextColor"
                android:textSize="@dimen/edit_text_size_14"
                tools:text="10.0.2.2:19108"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/peer_info_details"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6eaed"
            android:layout_marginStart="44dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_size_16"
            android:paddingEnd="@dimen/margin_padding_size_16"
            android:paddingBottom="@dimen/margin_padding_size_16"
            android:paddingStart="44dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_peer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_4"
                android:fontFamily="@font/source_sans_pro"
                android:includeFontPadding="false"
                android:textColor="@color/blueGraySecondTextColor"
                android:textSize="@dimen/edit_text_size_14"
                tools:text="peer info"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>