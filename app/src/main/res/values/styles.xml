<resources>
    <!-- AppTheme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#838383</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorControlHighlight">@color/surfaceRipple</item>
        <item name="background">@color/background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:textColor">@color/text1</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!--/LightTheme-->

    <!-- button style -->

    <style name="textViewButton" parent="TextAppearance.MaterialComponents.Body1">

        <item name="android:paddingStart">@dimen/margin_padding_size_16</item>
        <item name="android:paddingEnd">@dimen/margin_padding_size_16</item>
        <item name="android:paddingTop">@dimen/margin_padding_size_12</item>
        <item name="android:paddingBottom">@dimen/margin_padding_size_12</item>

        <item name="android:textSize">@dimen/edit_text_size_16</item>
        <item name="android:background">@drawable/default_app_button_bg</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="textViewButton.Outline" parent="textViewButton">
        <item name="android:background">@drawable/outline_button_bg</item>
        <item name="android:textColor">@color/outline_button_text_color</item>
    </style>
    <!-- /button style -->

    <style name="CircularProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#3d5873</item>
    </style>

    <!-- TabText Style -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- TabText Style -->

    <!-- TabLayout Style -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@drawable/unselected_tab_bottom_indicator</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabIndicatorColor">@color/blue</item>
    </style>

    <!--/TabLayout Style -->

    <!-- BottomSheetDialog Style -->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_corner_top</item>
    </style>
    <!--/BottomSheetDialog Style -->

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#c4cbd2</item>
    </style>

    <style name="TransactionsTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/edit_text_size_16</item>
    </style>

</resources>
